<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/foodButton"
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:layout_margin="10dp"
                android:background="@drawable/food"
                android:minWidth="50dp"
                android:minHeight="50dp"
                android:text="Food"
                android:textColor="#fff"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/crimeButton"
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:layout_margin="10dp"
                android:background="@drawable/crime"
                android:text=""
                android:textColor="#fff"
                android:textStyle="bold" />

            <Button
                android:id="@+id/comButton"
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:layout_margin="10dp"
                android:background="@drawable/community"
                android:text=""
                android:textColor="#fff"
                android:textStyle="bold" />

            <Button
                android:id="@+id/govButton"
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:layout_margin="10dp"
                android:background="@drawable/government"
                android:text=""
                android:textColor="#fff"
                android:textStyle="bold" />

            <Button
                android:id="@+id/realButton"
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:layout_margin="10dp"
                android:background="@drawable/real"
                android:text=""
                android:textColor="#fff"
                android:textStyle="bold" />

            <Button
                android:id="@+id/lifeButton"
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:layout_margin="10dp"
                android:background="@drawable/lifestyle"
                android:text=""
                android:textColor="#fff"
                android:textStyle="bold" />

        </LinearLayout>

    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>